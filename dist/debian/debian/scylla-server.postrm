#!/bin/sh

set -e

case "$1" in
    purge|remove)
        # We need to keep dependencies.conf and sysconfdir.conf on 'remove',
        # otherwise it will be missing after rollback.
        if [ "$1" = "purge" ]; then
            rm -rf /etc/systemd/system/scylla-server.service.d/
        fi
        ;;
esac

